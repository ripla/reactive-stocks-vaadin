<?xml version="1.0" encoding="UTF-8"?>
<web-app id="reactive-stocks-vaadin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="false" version="3.0">
	<display-name>Reactive stocks demo</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>Reactive stocks demo</servlet-name>
		<servlet-class>vaadin.scala.ScaladinServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>ScaladinUI</param-name>
			<param-value>ui.StockUI</param-value>
		</init-param>
		<init-param>
			<description>
  		Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>ui.Widgetset</param-value>
		</init-param>
		<async-supported>true</async-supported>
	</servlet>

	<servlet-mapping>
		<servlet-name>Reactive stocks demo</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Reactive stocks demo</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
</web-app>
